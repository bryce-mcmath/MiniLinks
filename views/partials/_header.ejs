<header>
  <nav class="navbar navbar-expand-md navbar-dark nav-bg">
    <a class="navbar-brand" href="/urls"
      ><i class="fas fa-link"></i> MiniLink</a
    >
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <% if (!user) { %>
      <div class="navbar-nav ml-auto">
        <a class="nav-item nav-link" href="/register">
          <button class="btn btn-outline-light float-right" type="button">
            Register
          </button>
        </a>
        <a class="nav-item nav-link" href="/login">
          <button class="btn btn-outline-light float-right" type="button">
            Login
          </button>
        </a>
      </div>

      <% } else { %>
      <div class="navbar-nav mr-auto">
        <a class="nav-item float-right nav-link" href="/urls">My URLs</a>
        <a class="nav-item float-right nav-link" href="/urls/new"
          >Create New URL</a
        >
      </div>
      <div class="nav-item mr-2 my-2">
        Welcome, <%= user.name %>
      </div>
      <form class="form-inline" action="/logout" method="POST">
        <button class="btn btn-danger my-2 my-sm-0" type="submit">
          Logout
        </button>
      </form>
      <% } %>
    </div>
  </nav>
</header>
